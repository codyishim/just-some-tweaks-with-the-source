<Window x:Class="TitanOptimizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="tweaks"  
        Height="700"
        Width="1050"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="Accent" Color="#00FFFF"/>
        <SolidColorBrush x:Key="BgDark" Color="#0B0F1A"/>
        <SolidColorBrush x:Key="Panel" Color="#12172A"/>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarBtn" TargetType="Button">
            <Setter Property="Foreground" Value="#AAA"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Padding="12">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource Accent}"/>
                    <Setter Property="Background" Value="#1A2040"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Toggle -->
        <Style x:Key="ModernToggle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border Width="40" Height="20"
                                Background="#1C2244"
                                CornerRadius="10">
                            <Ellipse x:Name="Dot"
                                     Width="14"
                                     Height="14"
                                     Fill="#AAA"
                                     Margin="3"
                                     HorizontalAlignment="Left">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="{StaticResource Accent}"/>
                                <Setter TargetName="Dot" Property="Fill" Value="Black"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="Dot"
                                                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                To="18" Duration="0:0:0.12"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BgDark}"
            CornerRadius="16"
            BorderBrush="#1E2444"
            BorderThickness="1">

        <Grid>

            <!-- TITLE BAR -->
            <Grid Height="42"
                  Background="#0E1330"
                  MouseLeftButtonDown="DragWindow">
                <DockPanel>
                    <TextBlock Text="TITAN ENGINE"
                               Foreground="{StaticResource Accent}"
                               FontWeight="Bold"
                               Margin="14,0"
                               VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal"
                                DockPanel.Dock="Right">
                        <Button Content="—" Width="36"
                                Click="Minimize_Click"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"/>
                        <Button Content="✕" Width="36"
                                Click="Close_Click"
                                Background="Transparent"
                                Foreground="Red"
                                BorderThickness="0"/>
                    </StackPanel>
                </DockPanel>
            </Grid>

            <Grid Margin="0,42,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- SIDEBAR -->
                <StackPanel Grid.Column="0"
                            Background="#0F1433">
                    <TextBlock Text="MENU"
                               Foreground="{StaticResource Accent}"
                               Margin="20,20,0,10"
                               FontWeight="Bold"/>
                    <Button Content="Optimizer"
                            Style="{StaticResource SidebarBtn}"
                            Click="Optimizer_Click"/>
                    <Button Content="Network"
                            Style="{StaticResource SidebarBtn}"
                            Click="Network_Click"/>
                    <Button Content="Advanced"
                            Style="{StaticResource SidebarBtn}"
                            Click="Advanced_Click"/>
                </StackPanel>

                <!-- MAIN CONTENT -->
                <Grid Grid.Column="1" Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="SYSTEM TWEAKS"
                               Foreground="{StaticResource Accent}"
                               FontSize="22"
                               FontWeight="Bold"
                               Margin="0,0,0,16"/>

                    <!-- CLICKABLE LIST -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding VisibleTweaks}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             VirtualizingStackPanel.IsVirtualizing="True"
                             VirtualizingStackPanel.VirtualizationMode="Recycling">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource Panel}"
                                        CornerRadius="10"
                                        Padding="14"
                                        Margin="0,0,0,12"
                                        BorderBrush="#1F2555"
                                        BorderThickness="1">
                                    <DockPanel>
                                        <CheckBox DockPanel.Dock="Right"
                                                  IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                  Style="{StaticResource ModernToggle}"
                                                  VerticalAlignment="Center"/>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="White"
                                                       FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Description}"
                                                       Foreground="#AAA"
                                                       FontSize="11"/>
                                        </StackPanel>
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- ENABLE/DISABLE + APPLY BUTTONS -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                Margin="0,12,0,0"
                                HorizontalAlignment="Right">

                        <Button Content="ENABLE ALL"
                                Width="120"
                                Height="48"
                                Margin="0,0,8,0"
                                Background="#1F2555"
                                Foreground="White"
                                FontWeight="Bold"
                                Click="EnableAll_Click"/>

                        <Button Content="DISABLE ALL"
                                Width="120"
                                Height="48"
                                Margin="0,0,8,0"
                                Background="#1F2555"
                                Foreground="White"
                                FontWeight="Bold"
                                Click="DisableAll_Click"/>

                        <Button Content="APPLY CATEGORY"
                                Width="180"
                                Height="48"
                                Margin="0,0,8,0"
                                Background="#1F2555"
                                Foreground="White"
                                FontWeight="Bold"
                                Click="Apply_Click"/>

                        <Button Content="APPLY ALL"
                                Width="180"
                                Height="48"
                                Background="{StaticResource Accent}"
                                Foreground="Black"
                                FontWeight="Bold"
                                Click="ApplyAll_Click"/>
                    </StackPanel>

                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
